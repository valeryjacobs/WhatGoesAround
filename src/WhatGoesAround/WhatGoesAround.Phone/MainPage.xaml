<Page
    x:Class="WhatGoesAround.Phone.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WhatGoesAround.Phone"
    xmlns:converters="using:WhatGoesAround.Phone.ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:ButtonColorConverter x:Key="ButtonColorConverter"/>
        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse StrokeThickness="20">
                                <Ellipse.Fill>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="{Binding Path=Color, Converter={StaticResource ButtonColorConverter}, Mode=OneWay}" Offset="0"/>
                                        <GradientStop Color="White" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.Stroke>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="{Binding Path=Color, Converter={StaticResource ButtonColorConverter}, Mode=OneWay}" Offset="0.492"/>
                                        <GradientStop Color="White"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                            </Ellipse>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Canvas x:Name="ButtonsCanvas">

        <Button x:Name="button1" Content="X"
                 Canvas.Left="{Binding Path=ViewModel.Button1.Left, Mode=OneWay}"
                 Canvas.Top="{Binding Path=ViewModel.Button1.Top, Mode=OneWay}"
                 Width="{Binding Path=ViewModel.Button1.Size, Mode=OneWay}"
                 Height="{Binding Path=ViewModel.Button1.Size, Mode=OneWay}"
                 Style="{StaticResource GameButtonStyle}"/>
        <Button x:Name="button2" Content="X"
                 Canvas.Left="{Binding Path=ViewModel.Button2.Left, Mode=OneWay}"
                 Canvas.Top="{Binding Path=ViewModel.Button2.Top, Mode=OneWay}"
                 Width="{Binding Path=ViewModel.Button2.Size, Mode=OneWay}"
                 Height="{Binding Path=ViewModel.Button2.Size, Mode=OneWay}"
                 Style="{StaticResource GameButtonStyle}"/>
    </Canvas>



</Page>
